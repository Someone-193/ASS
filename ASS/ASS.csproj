<?xml version="1.0" encoding="utf-8" ?>
<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <Optimize>true</Optimize>
        <Configurations>Exiled;LabAPI</Configurations>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <DebugType>embedded</DebugType>
        <DebugSymbols>false</DebugSymbols>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Exiled' ">
        <DefineConstants>EXILED;</DefineConstants>
        <AssemblyName>ASS-Exiled</AssemblyName>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'LabAPI' ">
        <DefineConstants>LABAPI</DefineConstants>
        <AssemblyName>ASS-LabAPI</AssemblyName>
    </PropertyGroup>

    <Import Project="../plugin.props" />

    <ItemGroup>
        <PackageReference Include="Northwood.LabAPI" Version="1.0.2" />
        <PackageReference Include="Lib.Harmony" Version="$(HarmonyVersion)" />
        <PackageReference Include="StyleCop.Analyzers" Version="$(StyleCopVersion)" />
        <PackageReference Include="ExMod.Exiled" Version="$(ExiledVersion)" />
    </ItemGroup>

    <ItemGroup>
        <Reference Include="UnityEngine.CoreModule.dll" HintPath="$(SL_REFERENCES)\UnityEngine.CoreModule.dll" Private="false" />
        <Reference Include="Unity.TextMeshPro.dll" HintPath="$(SL_REFERENCES)\Unity.TextMeshPro.dll" Private="false" />
        <Reference Include="Mirror.dll" HintPath="$(SL_REFERENCES)\Mirror.dll" Private="false" />
    </ItemGroup>

</Project>